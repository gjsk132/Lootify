<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titleBackgroundColor">

    <ImageView
        android:contentDescription="@string/contents"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lobby_background_no_animation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="280dp"
            android:fontFamily="@font/labrada"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="65sp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/white_frame"
            android:orientation="vertical">
            
            <Button
                android:layout_width="238dp"
                android:layout_height="74dp"/>

            
            
        </LinearLayout>

        <com.gjsk.lootify.customview.SmallButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text_color="@color/textBasicColor"
            app:enable="true"
            android:layout_marginBottom="20dp"
            app:text="JOIN"/>

        <com.gjsk.lootify.customview.SmallButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text_color="@color/textBasicColor"
            app:enable="false"
            app:text="FIND"/>

    </LinearLayout>

</FrameLayout>
